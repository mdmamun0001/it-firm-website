<div class=" row justify-content-center">
    <div class="col-md-10">

        @{
            ViewData["Title"] = "Appoinment Request";
        }

        <h1>@ViewData["Title"]</h1>
        <div class="d-flex rounded" style=" color:white; flex-direction:column; row-gap:20px; background-color:darkblue; padding:40px;">
            <p>Name : @ViewBag.AppoinmentRequest.Name</p>
            <p>Email : @ViewBag.AppoinmentRequest.Email</p>
            <p>Phone : @ViewBag.AppoinmentRequest.PhoneNumber</p>
            <p>Service Type : @ViewBag.AppoinmentRequest.ServiceType</p>
            <p>Message: <span style="color:white; padding:5px 10px; border-radius:4px;">@ViewBag.AppoinmentRequest.Message</span></p>
            <p style="text-align:end;"><span style="color:black; padding:5px 5px;border-radius:6px 0px; background-color:#ecdace;">Customer Flexible Time :@ViewBag.AppoinmentRequest.CustomerFlexibleDateTime.ToString("ddd dd MMM yyy HH:mm:ss")</span></p>
            <p style="text-align:end;"><span style="color:black; padding:5px 5px;border-radius:6px 0px; background-color:#ecdace;">Was Requested At :@ViewBag.AppoinmentRequest.CreatedDateTime.ToString("ddd dd MMM yyy HH:mm:ss")</span></p>
         </div>


        <a class="float-right  btn btn-info" style="margin-top:20px;" asp-controller="AppoinmentRequest" asp-action="Index"> All Appoinment Request</a>
    </div>
</div>