<div class=" row justify-content-center">
    <div class="col-md-12">

        @{
            ViewData["Title"] = " Service Category List";
        }

        <h1>@ViewData["Title"]</h1>
        @{
            if (TempData["FlashMessage"] != null)
            {
                <partial name="~/Views/Component/FlashMessage.cshtml"></partial>
            }
        }
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">
                            Name
                        </th>
                        <th scope="col">
                            Description
                        </th>
                        <th scope="col" class="text-center">
                            status
                        </th>
                        <th scope="col" class="text-center">
                            Display Order
                        </th>
                        <th scope="col" class="text-center">
                            Feature Images
                        </th>
                        <th scope="col" class="text-center">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in ViewBag.ServiceCategories)
                    {
                        <tr>
                            <td>
                                @item.Name

                            </td>
                            <td>
                                @(item.Description == null ? "" : item.Description)

                            </td>
                            <td class="text-center">

                                @(item.IsActive ? "Active" : "InActive")

                            </td>
                            <td class="text-center">
                                @item.DisplayOrder
                            </td>
                            <td class="text-center">

                                <img height="50" width="50" src="~/img/Service/@item.Images" />

                            </td>
                            <td class="text-center">
                                <a class="btn btn-info" asp-controller="ServiceCategory" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <button class=" float-right btn btn-danger" onclick="DeleteItem('/Admin/ServiceCategory/Delete/@item.Id')">Delete</button>

                            </td>

                        </tr>
                    }


                </tbody>
            </table>
            <form class="d-none" method="get" id="form-delete-item-action">
                <button type="submit" class="btn" id="Delete-confirm-item"> </button>
            </form>
        </div>
        <a class="float-right btn btn-info" asp-controller="ServiceCategory" asp-action="Create"> Create New One</a>
    </div>
</div>