<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @{
        if (ViewBag.CompanyInfo != null && ViewBag.CompanyInfo.Count > 0)
        {

            <title>@ViewData["Title"] - @ViewBag.CompanyInfo[0].CompanyName</title>
            <link rel="icon" type="image/x-icon" href="~/img/Gallary/@ViewBag.CompanyInfo[0].Logo">
        }else
        {

            <title>@ViewData["Title"] - Zdm Information Technology</title>
            <link rel="icon" type="image/x-icon" href="~/img/comapny-logo.jpg">
        }
    }
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/slick.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/slick-theme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="top-nav-bar" class="navbar navbar-expand-lg navbar-light bg-light  sticky " style="padding:10px 0px;">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">  
                    @{
                        if (ViewBag.CompanyInfo != null && ViewBag.CompanyInfo.Count > 0)
                        {

                            <img class="nav-logo-img" src="~/img/Gallary/@ViewBag.CompanyInfo[0].Logo">
                        }else {

                            <img class="nav-logo-img" src="~/img/comapny-logo.jpg">
                        }
                    }
                    
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                   
                </button>
                <div class="collapse navbar-collapse" style="justify-content: flex-end;" id="navbarNavDropdown">
       
                    <ul class="navbar-nav header-nav" style="display:flex;  column-gap:20px;">
                       
                        <li class="nav-item">
                            <a class="nav-link sub-sub-title @(ViewBag.ActiveNav == "Home" ? "active" : "")" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sub-sub-title @(ViewBag.ActiveNav == "Protfolio" ? "active" : "")" asp-controller="Home" asp-action="Protfolio">Protfoliyo</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link sub-sub-title dropdown-toggle @(ViewBag.ActiveNav == "Services" ? "active" : "")" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                               Services
                            </a>
                            <ul class="dropdown-menu top-nav-bar" aria-labelledby="navbarDropdownMenuLink">
                               @{
                                    if (ViewBag.ServiceCategories != null && ViewBag.ServiceCategories.Count > 0)
                                    {
                                        foreach (var item in ViewBag.ServiceCategories)
                                        {
                                                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Services"  asp-route-id="@item.Id" >@item.Name</a></li>
                                        }
                                   }
                               }
                                
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sub-sub-title @(ViewBag.ActiveNav == "Career" ? "active" : "")" asp-controller="Home" asp-action="JobApplication">Career</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sub-sub-title  @(ViewBag.ActiveNav == "About" ? "active" : "")" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sub-sub-title btn @(ViewBag.ActiveNav == "Contact" ? "active" : "")" type="button" style="border-radius:24px; background-color:#ff6600; padding-right:15px; padding-left:15px;" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="~/Views/Component/Footer.cshtml"></partial>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="~/js/slick.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="~/Views/Component/Js/CustomJs.cshtml"></partial>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
