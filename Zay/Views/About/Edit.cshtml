@model AboutEditViewModel
@{
    ViewData["Title"] = "Edit About Information";
}

<h1 class="text-align-center">@ViewData["Title"]</h1>
<div asp-validation-summary="All"></div>
<form method="post" enctype="multipart/form-data" asp-controller="About" asp-action="Edit" >
    <input hidden asp-for="@Model.Id" />
    <input hidden asp-for="@Model.ExistingLogo" />
    <input hidden asp-for="@Model.ExistingImage" />
    <div class="form-group">
        <label asp-for="CompanyName">Company Name</label>
        <input class="form-control" asp-for="@Model.CompanyName" />
        <span asp-validation-for="CompanyName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription">Short Description</label>
        <textarea class="form-control" asp-for="@Model.ShortDescription"> </textarea>
        <span asp-validation-for="ShortDescription"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="@Model.Description"> </textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Vission"></label>
        <textarea class="form-control" asp-for="@Model.Vission"> </textarea>
        <span asp-validation-for="Vission"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mission"></label>
        <textarea class="form-control" asp-for="@Model.Mission"> </textarea>
        <span asp-validation-for="Mission"></span>
    </div>
    <div class="form-group">
        <label asp-for="Strength"></label>
        <textarea class="form-control" asp-for="@Model.Strength"> </textarea>
        <span asp-validation-for="Strength"></span>
    </div>
   
    <div class="form-group">

        <label asp-for="PhoneNnmber">Phone</label>
        <input type="number" class="form-control" asp-for="@Model.PhoneNnmber" />
        <span asp-validation-for="PhoneNnmber"></span>
    </div>
    <div class="form-group">

        <label asp-for="PhoneNumber2">Additional Phone </label>
        <input type="number" class="form-control" asp-for="@Model.PhoneNumber2" />
        <span asp-validation-for="PhoneNumber2"></span>
    </div>
    <div class="form-group">

        <label asp-for="Email"></label>
        <input class="form-control" asp-for="@Model.Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">

        <label asp-for="Email2">Additional Email</label>
        <input class="form-control" asp-for="@Model.Email2" />
        <span asp-validation-for="Email2"></span>

    </div>
    <div class="form-group">

        <label asp-for="Address"></label>
        <input class="form-control" asp-for="@Model.Address" />
        <span asp-validation-for="Address"></span>

    </div>
    <div class="form-group">

        <label asp-for="AddressLink">Address Link</label>
        <input class="form-control" asp-for="@Model.AddressLink" />
        <span asp-validation-for="AddressLink"></span>
    </div>
    <div class="form-group">

        <label asp-for="OfficeTime">Office Time</label>
        <input class="form-control" asp-for="@Model.OfficeTime" />
        <span asp-validation-for="OfficeTime"></span>
    </div>
    <div class="form-group">

        <label asp-for="OffDay">Off Day</label>
        <input class="form-control" asp-for="@Model.OffDay" />
        <span asp-validation-for="OffDay"></span>
    </div>
    <div class="form-group">

        <label asp-for="Logo"></label>
        <input class="form-control" asp-for="@Model.Logo" />
        <span asp-validation-for="Logo"></span>
    </div>
    <div class="form-group">

        <label asp-for="Image"></label>
        <input class="form-control" asp-for="@Model.Image" />
        <span asp-validation-for="Image"></span>
    </div>
    <button class="btn btn-info float-right" type="submit">Update</button>
</form>
@section scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
    }