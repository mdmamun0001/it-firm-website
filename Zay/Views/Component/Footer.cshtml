<!--<div class="container-fluid" style="height:160px; background:#fa949d; padding:0px; margin:0px;"></div>-->
<div class="footer section-margin">
    <div class=" container ">
        <div class="row">
            <div class="col-lg-5">
                <div class="footer-circle-wrap">
                    <div class="footer-circle1">
                    </div>
                    <div class="footer-circle2 d-flex" style="flex-direction:column; align-items: center; justify-content: center;">
                        <p class="text-center sub-sub-title">Want to create something together?</p>
                        <a class="btn  common-button" asp-controller="Home" asp-action="Contact" >Let's Talk</a>
                    </div>
                    <div class="footer-circle3">
                    </div>

                </div>

            </div>
            <div class="col-lg-7">
                @{
                    if ( ViewBag.CompanyInfo != null && ViewBag.CompanyInfo.Count > 0)
                    {
                                                                                        <div class="Company-info" style="color:white">
                                                                                            <div class="d-flex" style="column-gap:20px; margin:50px 0px 20px 0px; align-items: center;">
                                                                                                <img class="" style="height:80p; width:80px; border-radius:50%;" src="~/img/Gallary/@ViewBag.CompanyInfo[0].Logo" />
                                                                                                <h2 class="title">@ViewBag.CompanyInfo[0].CompanyName</h2>
                                                                                            </div>

                                                                                            <p>@ViewBag.CompanyInfo[0].ShortDescription</p>
                                                                                            <div class="d-flex" style="column-gap:25px;">
                                                                                                <div style="width:200px;">
                                                                                                    <h5 class="sub-title">office</h5>
                                                                                                    <p><i class="fa-solid fa-location-dot"></i> @ViewBag.CompanyInfo[0].Address</p>
                                                                                                </div>
                                                                                                <div  style="width:400px;">
                                                                                                    <h5 class="sub-title">Contact</h5>
                                                                                                    <div class="d-flex" style=" justify-content:space-between;">
                                                                                                        <div>
                                                                                                            <p class="sub-sub-title"><i class="fa-solid fa-phone"></i> <a  href="tel:@ViewBag.CompanyInfo[0].PhoneNnmber">@ViewBag.CompanyInfo[0].PhoneNnmber</a></p>

                                                                                                            @{
                                                if (@ViewBag.CompanyInfo[0].PhoneNumber2 != null)
                                                {
                                                                                                                                                                                    <p class="sub-sub-title"><i class="fa-solid fa-phone"></i> <a href="tel:@ViewBag.CompanyInfo[0].PhoneNumber2">@ViewBag.CompanyInfo[0].PhoneNumber2</a></p>
                                                }
                                                                                                            }
                                                                                                        </div>
                                                                                                        <div>
                                                                                                            <p class="sub-sub-title"> <i class="fa-solid fa-envelope"></i> <a href="mailto:@ViewBag.CompanyInfo[0].Email">@ViewBag.CompanyInfo[0].Email</a></p>
                                                                                                            @{
                                                if (@ViewBag.CompanyInfo[0].Email2 != null)
                                                {
                                                                                                                                                                                    <p class="sub-sub-title"><i class="fa-solid fa-envelope"></i> <a href="mailto:@ViewBag.CompanyInfo[0].Email2">@ViewBag.CompanyInfo[0].Email2</a></p>

                                                }
                                                                                                            }
                                                                                                        </div>
                                                                                                    </div>
                                                                                                </div>
                                                                                            </div>
                                                                                        </div>
                    }
                }
                <div class="d-flex" style="column-gap:25px; color:white; flex-wrap: wrap;">
                    <div>
                        <ul class="common-link-style" style="list-style-type:none; padding: 0px; ">
                            <li><a asp-controller="Home" asp-action="Index" >Home</a></li>
                            <li><a href="/#service-prividing-section">Services</a></li>
                            <li><a asp-controller="Home" asp-action="Protfolio">Protfolio</a></li>
                            <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                        </ul>
                    </div>
                    <div>
                        @{
                            if (ViewBag.ServiceCategories != null && ViewBag.ServiceCategories.Count > 0)
                            {
                                            <ul class="common-link-style" style="list-style-type:none; padding: 0px;">

                                                                                  @{ int Count = 0;
                                                                                                                                 @foreach (var item in ViewBag.ServiceCategories)
                                                  {
                                                      Count += 1; 
                                                      if(Count >5 ){
                                                               break;
                                                       }
                                                                                                                                      <li><a asp-controller="Home" asp-action="Services" asp-route-id="@item.Id">@item.Name</a></li>
                                                           
                                                  }
                                                                                  }                                                     
                                                                                                </ul>
                            }
                        }
                    </div>
                    <div class="d-flex" style=" column-gap:8px; align-self: center; margin-left: auto;">
                        @{
                            if (ViewBag.SocialMedias != null && ViewBag.SocialMedias.Count > 0)
                            {
                                                                                                @foreach (var item in ViewBag.SocialMedias)
                                {
                                                                                                    <div class="social-circle text-center" style="background-color:@item.BgColor"><a class="text-center" href="@item.Link" style="font-size:23px; color:@item.Color"><i class="@item.ClassName"></i></a></div>

                                }
                            }
                        }


                    </div>

                </div>
                @{
                    if (ViewBag.ServiceCategories != null)
                    {
                        int length = ViewBag.ServiceCategories.Count;
                        if (length > 5)
                        {
                                        <div class="d-flex last-services common-link-style" style="flex-wrap: wrap; justify-content:start; align-items:center; column-gap:10px; margin-top:20px;">
                                                  @for(int i=5;  i < length; i++) {
                                                <p  style="padding:2px 6px; background:white; border-radius:4px;"><a asp-controller="Home" asp-action="Services" asp-route-id="@ViewBag.ServiceCategories[i].Id">@ViewBag.ServiceCategories[i].Name</a></p>
                                   }
                                          </div>
                        }

                    }
                }
            </div>
        </div>
        <hr />
        <div class="row text-center ">
            <p style="color:#c9d2ed63">
                ©@(ViewBag.CompanyInfo != null && ViewBag.CompanyInfo.Count > 0 ? ViewBag.CompanyInfo[0].CompanyName : "ZDM")  @{
                    @DateTime.Now.ToString("yyyy")
                    ;
                } All rights reserved.</p>
        </div>
    </div>
</div>