<div class=" row justify-content-center">
    <div class="col-md-12">

        @{
            ViewData["Title"] = "Social Media";
        }


        <h1>@ViewData["Title"]</h1>
        @{
            if (TempData["FlashMessage"] != null)
            {
                <partial name="~/Views/Component/FlashMessage.cshtml"></partial>
            }
        }
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">
                            Class Name
                        </th>
                        <th scope="col">
                            Background color
                        </th>
                        <th scope="col">
                            Color
                        </th>
                        <th scope="col" class="text-center">
                            Link
                        </th>
                        <th scope="col" class="text-center">
                            Display Order
                        </th>
                        <th scope="col" class="text-center">
                            Status
                        </th>
                        <th scope="col" class="text-center">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in ViewBag.SocialMedias)
                    {
                        <tr>
                            <td>
                                @item.ClassName

                            </td>

                            <td>
                                @item.BgColor

                            </td>
                            <td>
                                @item.Color

                            </td>
                            <td>
                                @item.Link

                            </td>
                            <td class="text-center">
                                @item.DisplayOrder
                            </td>
                            <td class="text-center">

                                @(item.IsActive ? "Active" : "InActive")

                            </td>
                            <td class="text-center">
                                <a class="btn btn-info" asp-controller="SocialMedia" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <button class=" float-right btn btn-danger" onclick="DeleteItem('/Admin/SocialMedia/Delete/@item.Id')">Delete</button>

                            </td>

                        </tr>
                    }


                </tbody>
            </table>
            <form class="d-none" method="get" id="form-delete-item-action">
                <button type="submit" class="btn" id="Delete-confirm-item"> </button>
            </form>
        </div>
       <a class="float-right btn btn-info" asp-controller="SocialMedia" asp-action="Create"> Create New One</a>  
    </div>
</div>