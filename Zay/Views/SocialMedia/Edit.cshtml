@model SocialMedia
@{
    ViewData["Title"] = "Edit Social Media";
}

<h1 class="text-align-center">@ViewData["Title"]</h1>
<div asp-validation-summary="All"></div>
<form method="post">
    <div class="form-group">
        <label asp-for="ClassName"></label>
        <input class="form-control" asp-for="ClassName" />
        <span asp-validation-for="ClassName"></span>
    </div>
    <div class="form-group">
        <label asp-for="BgColor"></label>
        <input class="form-control" asp-for="BgColor" />
        <span asp-validation-for="BgColor"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <input class="form-control" asp-for="Color" />
        <span asp-validation-for="Color"></span>
    </div>
    <div class="form-group">
        <label asp-for="Link"></label>
        <input class="form-control" asp-for="Link" />
        <span asp-validation-for="Link"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive">Status</label>
        <select class="form-control" asp-for="IsActive">
            <option value="">Select Status</option>
            <option value="true">Active</option>
            <option value="false">InActive</option>
            <span asp-validation-for="IsActive"></span>
        </select>
   </div>
    <div class="form-group">

        <label asp-for="DisplayOrder"></label>
        <input class="form-control" asp-for="DisplayOrder" />
        <span asp-validation-for="DisplayOrder"></span> 
   </div>
    
    <button class="btn btn-info float-right" type="submit">Update</button>
</form>
@section scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
    }