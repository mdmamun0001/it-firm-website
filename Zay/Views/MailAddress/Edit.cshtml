@model MailAddressEditViewModel
@{
    ViewData["Title"] = "Edit Mail Address";
}

<h1 class="text-align-center">@ViewData["Title"]</h1>
<div asp-validation-summary="All"></div>
<form method="post" asp-controller="MailAddress" asp-action="Edit">
    <input hidden asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="@Model.Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive">Status</label>
        <select class="form-control" asp-for="@Model.IsActive">
            <option value="">Select Status</option>
            <option value="true">Active</option>
            <option value="false">InActive</option>
            <span asp-validation-for="IsActive"></span>
        </select>
   </div>
    
    <button class="btn btn-info float-right" type="submit">Update</button>
</form>
@section scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
    }